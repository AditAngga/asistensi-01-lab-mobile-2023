<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/hanging"
            android:text="Star Triva"
            android:textColor="#F1E6C4"
            android:textSize="45sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="80dp"
            app:cardBackgroundColor="#8B5D2C80"
            app:cardCornerRadius="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="20dp"
                app:cardBackgroundColor="#B55D2C80">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/img_profile"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:backgroundTint="#60BA93F1"
                        android:padding="5dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/baseline_camera_alt_24"
                        app:shapeAppearanceOverlay="@style/img"
                        app:strokeColor="@color/white"
                        app:strokeWidth="3dp">

                    </com.google.android.material.imageview.ShapeableImageView>

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/edittext_border"
                        android:fontFamily="@font/poppins"
                        android:gravity="center_vertical"
                        android:hint="enter your name"
                        android:paddingHorizontal="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/baloo"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_score"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <Button
                        android:id="@+id/btn_apply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="17dp"
                        android:backgroundTint="#F2D175CC"
                        android:fontFamily="@font/baloo"
                        android:text="Apply"
                        android:textAllCaps="false"
                        android:textSize="23sp"
                        app:cornerRadius="10dp" />

                    <Button
                        android:id="@+id/btn_play"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginBottom="17dp"
                        android:backgroundTint="#F2D175CC"
                        android:fontFamily="@font/baloo"
                        android:text="Play"
                        android:textAllCaps="false"
                        android:textSize="23sp"
                        android:textStyle="bold"
                        app:cornerRadius="10dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</LinearLayout>
