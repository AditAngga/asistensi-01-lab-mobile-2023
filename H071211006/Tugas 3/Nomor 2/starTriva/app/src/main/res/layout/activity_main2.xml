<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/hanging"
        android:text="Star Triva"
        android:textColor="#F1E6C4"
        android:textSize="45sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_noQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/baloo"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp">

        <View
            android:layout_width="350dp"
            android:layout_height="135dp"
            android:background="@drawable/question_background"></View>

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp">

        <View
            android:id="@+id/v_answerA"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:background="@drawable/answer_background"></View>

        <TextView
            android:id="@+id/tv_answerA"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:textColor="@color/white" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp">

        <View
            android:id="@+id/v_answerB"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:background="@drawable/answer_background"></View>

        <TextView
            android:id="@+id/tv_answerB"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:textColor="@color/white" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp">

        <View
            android:id="@+id/v_answerC"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:background="@drawable/answer_background"></View>

        <TextView
            android:id="@+id/tv_answerC"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:textColor="@color/white" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp">

        <View
            android:id="@+id/v_answerD"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:background="@drawable/answer_background"></View>

        <TextView
            android:id="@+id/tv_answerD"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:textColor="@color/white" />
    </FrameLayout>

</LinearLayout>